<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/img_song"
            motion:touchAnchorSide="bottom"
            />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_marginEnd="216dp"
            android:layout_height="25dp"
            android:layout_marginRight="216dp"
            android:layout_marginBottom="92dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="33dp"
            android:id="@+id/btnplay" />
        <Constraint
            android:layout_height="26dp"
            android:layout_marginBottom="92dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="200dp"
            android:layout_marginStart="200dp"
            android:id="@+id/btnstop" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_marginEnd="180dp"
            android:layout_height="25dp"
            android:layout_marginRight="180dp"
            android:layout_marginBottom="28dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="33dp"
            android:id="@+id/btnplay" />
        <Constraint
            android:layout_height="26dp"
            android:layout_marginBottom="28dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="32dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="260dp"
            android:layout_marginStart="260dp"
            android:id="@+id/btnstop" />
        <Constraint
            android:layout_marginEnd="228dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="228dp"
            android:layout_marginBottom="28dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/btnReturn" />
        <Constraint
            android:layout_marginEnd="52dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="52dp"
            android:layout_marginBottom="28dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/btnSkip" />
        <Constraint
            android:layout_height="26dp"
            android:layout_marginBottom="60dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="223dp"
            android:id="@+id/timeLine"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" />
        <Constraint
            android:id="@+id/imageView10"
            motion:layout_constraintStart_toEndOf="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/btnSkip"
            motion:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="@+id/btnSkip"
            android:alpha="0" />
        <Constraint
            android:id="@+id/imageView14"
            motion:layout_constraintEnd_toStartOf="@+id/btnReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/btnReturn"
            motion:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="24dp"
            motion:layout_constraintTop_toTopOf="@+id/btnReturn"
            android:alpha="0" />
        <Constraint
            android:layout_marginEnd="284dp"
            android:layout_height="98dp"
            android:layout_marginTop="616dp"
            android:layout_marginRight="284dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="126dp"
            android:id="@+id/img_song" />
        <Constraint
            android:id="@+id/nameSong"
            motion:layout_constraintEnd_toEndOf="@+id/img_song"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/img_song"
            motion:layout_constraintStart_toStartOf="@+id/img_song"
            android:layout_marginTop="25dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/nameSinger"
            motion:layout_constraintEnd_toEndOf="@+id/nameSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/nameSong"
            motion:layout_constraintStart_toStartOf="@+id/nameSong"
            android:layout_marginTop="5dp"
            android:alpha="0" />
    </ConstraintSet>
</MotionScene>